{% assign linklist = linklists[settings.features-linklist] %}
{% if linklist != empty and linklist.size > 0 %}

{% assign is_3 = linklist.size | modulo: 3 %}
{% assign is_4 = linklist.size | modulo: 4 %}

{% if is_4 == 0 %}
  {% assign cols = 4 %}
{% else %}
  {% assign cols = 3 %}
{% endif %}

<section id="features-linklist-overview" class="section-wrap">
	{% include '__containers-open' %}
		<h2 class="page-header">{{ linklist.title }}</h2>

		<div class="row">
		  {% for l in linklist.links %}
		    {% include 'features-loop' with 'linklist' %}
		  {% endfor %}
		</div>
	{% include '__containers-close' %}
</section>
{% endif %}
